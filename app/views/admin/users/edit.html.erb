<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t('admin.edit_user') %></h3>
  </div>
  <div class="panel-body">

    <%= form_for @user, url: admin_user_path(@user), html: { role: 'form' } do |f| %>

      <div class="form-group has-feedback <%= 'has-error' if @user.errors.messages[:username] %>">
        <%= f.label :username %>
        <%= f.text_field :username, class: 'form-control' %>
        <% if @user.errors.messages[:username].any? %>
          <span class="glyphicon glyphicon-remove form-control-feedback"></span>
          <% @user.errors.messages[:username].each do |msg| %>
            <span class="help-block"><%= msg %></span>
          <% end %>
        <% end %>
      </div>

      <div class="form-group has-feedback <%= 'has-error' if @user.errors.messages[:name] %>">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        <% if @user.errors.messages[:name].any? %>
          <span class="glyphicon glyphicon-remove form-control-feedback"></span>
          <% @user.errors.messages[:name].each do |msg| %>
            <span class="help-block"><%= msg %></span>
          <% end %>
        <% end %>
      </div>

      <div class="form-group has-feedback <%= 'has-error' if @user.errors.messages[:email] %>">
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control' %>
        <% if @user.errors.messages[:email].any? %>
          <span class="glyphicon glyphicon-remove form-control-feedback"></span>
          <% @user.errors.messages[:email].each do |msg| %>
            <span class="help-block"><%= msg %></span>
          <% end %>
        <% end %>
      </div>

      <%= f.submit t('save_change'), class: 'btn btn-default' %>
      <%= link_to t('admin.back_to_users_index'), admin_users_path, class: 'btn' %>

    <% end %>

  </div>
</div>
