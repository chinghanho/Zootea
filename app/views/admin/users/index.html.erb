<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to t('admin.new_user'), new_admin_user_path, class: 'btn btn-default btn-xs pull-right' %>
    <h1 class="panel-title"><%= t('admin.users') %></h1>
  </div>

  <ul class="admin-list list-group">
    <% @users.each do |user| %>
      <li class="admin-list-item list-group-item">
        <span><%= user.username %></span>
        <div class="admin-list-item-actions pull-right">
          <%= link_to t('show'), admin_user_path(user), class: 'btn btn-default btn-xs' %>
          <%= link_to t('edit'), edit_admin_user_path(user), class: 'btn btn-default btn-xs' %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
