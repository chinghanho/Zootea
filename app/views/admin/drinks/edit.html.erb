<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title"><%= t('admin.edit_drink') %></div>
  </div>

  <div class="panel-body">
    <%= form_for @drink, url: admin_shop_drink_path(@shop.id, @drink), html: { class: 'form-horizontal', role: 'form' } do |f| %>

      <div class="form-group has-feedback <%= 'has-error' if @drink.errors.messages[:name] %>">
        <%= f.label :name, class: 'control-label col-lg-2' %>
        <div class="col-lg-4">
          <%= f.text_field :name, class: 'form-control' %>
          <% if @drink.errors.messages[:name].any? %>
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
            <% @drink.errors.messages[:name].each do |msg| %>
              <span class="help-block"><%= msg %></span>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <span class="col-lg-2 control-label text-bolder"><%= t('admin.sizes_and_prices') %></span>
        <div class="col-lg-10">
          <div class="row">

            <%= f.label :small_size_price, class: 'control-label sr-only' %>
            <div class="col-lg-3">
              <div class="input-group">
                <div class="input-group-addon"><%= t('drinks.sizes.small') %></div>
                <%= f.number_field :small_size_price, class: 'form-control', placeholder: '20' %>
              </div>
            </div>

            <%= f.label :medium_size_price, class: 'control-label sr-only' %>
            <div class="col-lg-3">
              <div class="input-group">
                <div class="input-group-addon"><%= t('drinks.sizes.medium') %></div>
                <%= f.number_field :medium_size_price, class: 'form-control', placeholder: '25' %>
              </div>
            </div>

            <%= f.label :large_size_price, class: 'control-label sr-only' %>
            <div class="col-lg-3">
              <div class="input-group">
                <div class="input-group-addon"><%= t('drinks.sizes.large') %></div>
                <%= f.number_field :large_size_price, class: 'form-control', placeholder: '30' %>
              </div>
            </div>

          </div>
          <span class="help-block"><%= t('admin.text.keep_the_field_empty_if_the_size_is_not_exist') %></span>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-9 col-lg-offset-2">
          <%= f.submit t('admin.new_drink'), class: 'btn btn-default' %>
          <%= link_to t('admin.back_to_shop', shop_name: @shop.name), admin_shop_path(@shop.id), class: 'btn btn-link' %>

          <div class="pull-right">
            <%= button_to t('delete'), admin_shop_drink_path(@shop.id, @drink), method: :delete,
                class: 'btn btn-link', data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>
