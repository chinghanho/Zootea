<ul class="nav navbar-nav navbar-right">
  <%= nav_link t('home'), root_path %>
  <% if user_signed_in? %>
    <%= nav_link current_user.name, user_path(current_user) %>

    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b class="caret"></b></a>
      <ul class="dropdown-menu">
        <li>
          <%# link_to t('user_links.profile'), user_path(current_user) %>
        </li>
        <li>
          <%# link_to t('user_links.settings'), settings_account_path %>
        </li>
        <% if current_user.admin? %>
          <%= render partial: 'shared/admin_dropmenu' %>
        <% end %>
        <li class="divider"></li>
        <li><%= link_to t('auth.sign_out'), signout_path, method: :delete %></li>
      </ul>
    </li>
  <% else %>
    <%= nav_link t('auth.sign_in'), signin_path, class: 'navbar-link' %>
  <% end %>
</ul>
